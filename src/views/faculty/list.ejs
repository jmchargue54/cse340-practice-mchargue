<%- include('../partials/header') %>
<main>
    <h1>Faculty</h1>

    <div class="sort-options">
        <span>Sort by: </span>
        <a href="/faculty" class="<%= currentSort === 'name' ? 'active' : '' %>">Name</a>
        <a href="/faculty?sort=department" class="<%= currentSort === 'department' ? 'active' : '' %>">Department</a>
        <a href="/faculty?sort=title" class="<%= currentSort === 'title' ? 'active' : '' %>">Title</a>
    </div>


    <div class="faculty-list">
        <% Object.values(facultyList).forEach(person => { %>
            <div class="faculty-card">
                <h3><a href="/faculty/<%= person.slug %>"><%= person.name %></a></h3>
                <p><% person.id %></p>
                <p class="faculty-title"><%= person.title %></p>
                <p class="faculty-department"><%= person.department %></p>
            </div>
        <% }); %>
    </div>
</main>
<%- include('../partials/footer') %>