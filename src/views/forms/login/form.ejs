<%- include('../../partials/header') %>
<main>
    <h1><%= title %></h1>
    <p>
        Enter your email and password to access your account. Don't have an account? <a href="/register">Register here</a>.
    </p>
    
    <!-- TODO: Create form that posts to /login -->
     <form method="POST" action="/login" class="login-form">
        <!-- Email field -->
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter you email address" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
        </div>
        <!-- Password field -->
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" minlength="8" pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*" required>
        </div>
        <button type="submit">Login</button>
     </form>

</main>
<%- include('../../partials/footer') %>